name: Analisis Frecuencia Punto X
on:
  workflow_dispatch:
  push:
    branches: [ main ]

jobs:
  ejecucion-nodo:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout del Repositorio
        uses: actions/checkout@v4

      - name: Configurar Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'

      - name: Instalar Dependencias
        run: |
          pip install crewai

      - name: Ejecutar Nodo Soberano
        run: |
          python investigacion.py